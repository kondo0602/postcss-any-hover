{
  "name": "postcss-any-hover",
  "version": "1.0.0",
  "description": "PostCSS plugin that extracts and wraps rules containing `:hover` pseudo-classes in `@media (any-hover: hover) {}` media queries",
  "keywords": ["postcss", "css", "postcss-plugin", "postcss-any-hover", "hover", "any-hover"],
  "scripts": {
    "unit": "node --test index.test.js",
    "test": "npm run unit && eslint ."
  },
  "author": "kondo0602",
  "license": "MIT",
  "repository": "kondo0602/postcss-any-hover",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.27"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "postcss": "^8.4.27"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended"]
  }
}
